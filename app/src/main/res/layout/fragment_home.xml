<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background"
        tools:context=".ui.main.MainActivity">

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:text="@string/hello_ud83d_udc4b"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/poppins_semibold"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="VisualLintOverlap" />

        <TextView
            android:id="@+id/tv_homename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/nama_pengguna"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toBottomOf="@id/tv_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_inilah"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/inilah_konten_pilihanmu"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_homename"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_makanan"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="-30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_button_background1"
            app:layout_constraintTop_toBottomOf="@id/tv_inilah"
            app:layout_constraintEnd_toStartOf="@id/btn_resep"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Makanan"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_resep"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="-30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_inilah"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_makanan"
            android:text="Resep"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/iv_gambar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/regis1"
            app:layout_constraintTop_toBottomOf="@id/btn_resep"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_berhasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textAlignment= "center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/iv_gambar"
            android:text="Berhasil Masuk"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_semibold"/>

        <TextView
            android:id="@+id/tv_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment= "center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Temukan Rekomendasi Makanan Bayi Anda Disini"
            app:layout_constraintTop_toBottomOf="@id/tv_berhasil"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_regular"/>

        <!-- Your existing RecyclerView and ProgressBar code here -->

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
